generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE 
  INACTIVE
}

enum CourseLevels {
  BEGINNER
  INTERMEDIATE
  ADVENCED
}

enum StaffRole {
  ADMIN
  MANAGER
  RECEPTIONS
}

model Branch {
  id  String @id @default(uuid())
  name String @unique
  logo String 
  address String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("branches")

  rooms Room[]
  courses Course[]
  groups Group[]
  teachers Teacher[]
  teacherGroups TeacherGroup[]
  students Student[]
  studentGroups StudentsGroup[]
  staffs Staff[]
}

model Room {
  id String @id @default(uuid())
  name String @unique
  capacity String
  branchId String 
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  branch  Branch @relation(fields: [branchId], references: [id])
  groups Group[]
  @@map("rooms")
}

model Course {
  id String @id @default(uuid())
  name String @unique
  price Decimal @db.Decimal(10, 2)
  level Int
  durationMonth Int
  durationHours Float
  branchId String 
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  groups Group[]
  @@map("courses")
}

model Group {
  id String @id @default(uuid())
  name String @unique

  courseId String 
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  startedDate DateTime @db.Date
  endDate DateTime @db.Date

  branchId String
  roomId String
  status Status @default(ACTIVE) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teacherGroups TeacherGroup[]
  studentGroups StudentsGroup[]
  
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  room Room @relation(fields: [roomId], references: [id],onDelete: Cascade, onUpdate: Cascade)

  @@map("groups")
  @@unique([courseId, name])
}


model Teacher {
  id String @id @default(uuid())
  fullName String 
  photo String?
  email String @unique
  phone String @unique
  password String
  profession String[]
  branchId String
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teacherGroups TeacherGroup[]
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@map("teachers")
}

model TeacherGroup {
  teacherId String
  groupId String
  branchId String
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([teacherId, groupId])
  @@map("teacherGroups")
}

model Student {
  id String @id @default(uuid())
  fullName String
  photo String?
  email String  @unique
  phone String @unique
  password String
  branchId String
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  studentGroups StudentsGroup[]
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("students")
}

model StudentsGroup {
  studentId String
  groupId String
  branchId String
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@unique([studentId, groupId])
  @@map("studentsGroups")
}

model Staff {
  id String @id @default(uuid())
  fullName String
  photo String?
  phone String  @unique
  password String
  email String  @unique
  role StaffRole
  branchId String
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@map("staffs")

}